<div class="signupcontainer">
  <% provide(:title, "Sign Up") %>
    <div class="text-center">
      <br /><br />
      <h1>Sign up</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="row">
        <div class="col-md-4 ml-auto mr-auto">
          <%= f.label :email %><br />
          <%= f.email_field :email, placeholder: "Email Address", autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 ml-auto mr-auto">
          <%= f.label :user_name %><br />
          <%= f.text_field :user_name, placeholder: "Username", required: true %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 ml-auto mr-auto">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 ml-auto mr-auto">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, placeholder: "Password", autocomplete: "off" %>
        </div>
      </div>

      <div class="actions">
        <br/><%= f.submit "Sign up", class: "btn btn-primary" %><br />
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

