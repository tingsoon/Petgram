<p id="notice"><%= notice %></p>

<h1>Petgram</h1>
<br></br>
<div class="posts-wrapper row">
  <% @posts.each do |post| %>
  <div class="post">
    <div class="post-head">
      <div class="name">
        <%= post.user.user_name %>
    </div>
    </div>
    <div class="image center-block">
      <a href="<%= post_path post%>" class="summary">
      <%= image_tag(post.image.thumbnail.url, :class => "img-responsive") %>
    </div>
    <p class="caption">
      <%= post.caption %>
    </p>
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  <% end %>
</div>

<br>

<%= link_to 'New Post', new_post_path %>
